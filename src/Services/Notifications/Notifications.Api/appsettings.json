{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/notifications-{Date}.txt",
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning"
      }
    }
  },

  "ConnectionStrings": {
    "NotificationsDb": "Host=localhost;Port=5432;Database=NotificationsDb;Username=postgres;Password=your_password;Pooling=true;Minimum Pool Size=5;Maximum Pool Size=100;Command Timeout=30"
  },

  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "UseSsl": true,
    "User": "your-email@gmail.com",
    "Password": "your-app-specific-password",
    "From": "notifications@yourcompany.com",
    "FromName": "Notification Service",
    "RetryCount": 3,
    "RetryDelaySeconds": 5,
    "TimeoutSeconds": 30
  },

  "Telegram": {
    "BotToken": "1234567890:AAHdqTcvCH1vGWJxfSeofSAs0K5PALD_xxxx",
    "EnableWebhooks": false,
    "WebhookUrl": "https://yourdomain.com/api/telegram/webhook"
  },

  "RateLimiting": {
    "Enabled": true,
    "MaxRequestsPerMinute": 60,
    "MaxRequestsPerHour": 1000,
    "BurstLimit": 10
  },

  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health",
    "DatabaseTimeout": 5,
    "SmtpTimeout": 3,
    "CheckIntervalSeconds": 30
  },

  "Caching": {
    "Enabled": true,
    "DefaultExpirationMinutes": 15,
    "Redis": {
      "Enabled": false,
      "ConnectionString": "localhost:6379,password=your_redis_password"
    }
  },
  "Security": {
    "ApiKey": "your-secure-api-key-for-external-clients",
    "Jwt": {
      "Issuer": "NotificationsService",
      "Audience": "NotificationClients",
      "Secret": "your-super-secure-jwt-secret-key-min-32-chars",
      "ExpiryMinutes": 60
    },
    "Cors": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "https://yourfrontend.com"
      ],
      "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
      "AllowedHeaders": [ "*" ]
    }
  },

  "Monitoring": {
    "Metrics": {
      "Enabled": true,
      "Endpoint": "/metrics",
      "CollectIntervalSeconds": 10
    },
    "Tracing": {
      "Enabled": true,
      "ServiceName": "NotificationsService",
      "Jaeger": {
        "AgentHost": "localhost",
        "AgentPort": 6831
      }
    },
    "Serilog": {
      "MinimumLevel": "Information",
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "logs/log-.txt",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 7
          }
        },
        {
          "Name": "Seq",
          "Args": { "serverUrl": "http://localhost:5341" }
        }
      ]
    }
  },

  "Queues": {
    "RabbitMQ": {
      "Enabled": false,
      "HostName": "localhost",
      "UserName": "guest",
      "Password": "guest",
      "Exchange": "notifications",
      "Queue": "notifications.process"
    },
    "AzureServiceBus": {
      "Enabled": false,
      "ConnectionString": "Endpoint=sb://yournamespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your_key",
      "QueueName": "notifications"
    }
  },

  "Templates": {
    "Path": "Templates",
    "DefaultCulture": "en-US",
    "Email": {
      "Welcome": "welcome.html",
      "PasswordReset": "password-reset.html",
      "OrderConfirmed": "order-confirmed.html"
    },
    "Sms": {
      "VerificationCode": "verification-code.txt",
      "AppointmentReminder": "appointment-reminder.txt"
    }
  },

  "Application": {
    "Name": "Notification Service",
    "Version": "1.0.0",
    "Environment": "Development",
    "BaseUrl": "https://localhost:5001",
    "MaxNotificationBatchSize": 1000,
    "DefaultTimeoutSeconds": 30
  }
}